{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ui/*": ["libs/ui/src/*"],
      "@ui/db": ["libs/ui/src/db/index.ts"],
      "@ui/models/*": ["libs/ui/src/models/*"],
      "@ui/redux/*": ["libs/ui/src/redux/*"],
      "@ui/services/*": ["libs/ui/src/services/*"],
      "@ui/components/*": ["libs/ui/src/components/*"],
      "@ui/utils/*": ["libs/ui/src/utils/*"],
      "@single/*": ["./apps/single/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
